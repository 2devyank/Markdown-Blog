<div class="form-group">
  <label for="title">Title</label>
  <input type="text" name="title" id="title" required value="<%= article.title %>" class="form-control">
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" required class="form-control"><%=article.description%></textarea>

</div>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown" required class="form-control"><%-article.sanitizedhtml%></textarea>
</div>
<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>